@{
    ViewBag.Title = "Something went wrong";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 50px;">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <i class="glyphicon glyphicon-exclamation-sign"></i> 
                        Oops! Something went wrong
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="text-center" style="margin-bottom: 20px;">
                        <i class="glyphicon glyphicon-warning-sign" style="font-size: 48px; color: #d9534f;"></i>
                    </div>
                    <p class="text-center" style="font-size: 16px;">
                        We're sorry, but an unexpected error occurred while processing your request.
                    </p>
                    <p class="text-center">
                        Our technical team has been notified and is working to resolve this issue.
                    </p>
                    
                    <div class="text-center" style="margin-top: 30px;">
                        <a href="@Url.Action("Create", "Form", new { leadId = ViewBag.LeadId })" 
                           class="btn btn-primary">
                            <i class="glyphicon glyphicon-refresh"></i> Try Again
                        </a>
                        <a href="mailto:support@chefmiddleeast.com?subject=Form Error Report" 
                           class="btn btn-default" style="margin-left: 10px;">
                            <i class="glyphicon glyphicon-envelope"></i> Contact Support
                        </a>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(ViewBag.ErrorId as string))
                    {
                        <div class="alert alert-info" style="margin-top: 20px;">
                            <small>
                                <strong>Error Reference ID:</strong> @ViewBag.ErrorId<br/>
                                Please include this ID when contacting support.
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>