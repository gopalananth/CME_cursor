@{
    ViewBag.Title = "Link Expired";
}
<link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@200..1000&display=swap" rel="stylesheet">

<style type="text/css">
    .thankyou-sec {
        font-family: "Nunito Sans", sans-serif;
        text-align: center;
        margin-top: 50px;
    }

    .thankyou-sec h1 {
        font-family: "Nunito Sans", sans-serif;
        margin: 0 0 10px 0;
        font-size: 24px;
        color: #58595b;
        font-weight: 700;
    }

    .thankyou-sec p {
        font-family: "Nunito Sans", sans-serif;
        color: #44403c;
        font-size: 16px;
        font-weight: bold; /* 👈 Make text bold */
    }

    .back-btn {
        background-color: #9e0b2a;
        cursor: pointer;
        display: inline-block;
        padding: 13px 20px 13px 16px;
        border: none;
        align-items: center;
        border-radius: 10px;
        margin-top: 20px;
        font-size: 16px;
        font-weight: normal;
        letter-spacing: 0;
        line-height: 1.3;
        transition: 0.6s;
        outline: none;
        color: #fff;
        text-decoration: none;
    }

    .back-btn:hover,
    .back-btn:active,
    .back-btn:focus,
    .back-btn:active:focus {
        background-color: #6f081d;
        outline: none;
        border: none;
    }

    .back-btn span {
        display: inline-block;
        margin-top: 1px;
        float: left;
        height: 18px;
        margin-right: 10px;
        rotate: 180deg;
    }
</style>

<div class="thankyou-sec">
    <h1>Link Expired</h1>
    <p>This form link is no longer valid. It may have expired after 48 hours or already been submitted.</p>
    <p>
        <a href="/" class="back-btn">
            <span>
                <svg focusable="false" preserveAspectRatio="xMidYMid meet" xmlns="http://www.w3.org/2000/svg" fill="currentColor" width="20" height="20" viewBox="0 0 20 20" aria-hidden="true">
                    <path d="M11.8 2.8L10.8 3.8 16.2 9.3 1 9.3 1 10.7 16.2 10.7 10.8 16.2 11.8 17.2 19 10z"></path>
                </svg>
            </span>
            Back to Home
        </a>
    </p>
</div>
